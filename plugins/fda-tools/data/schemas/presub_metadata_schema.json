{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://fda-tools.example.com/schemas/presub_metadata.schema.json",
  "title": "PreSTAR Pre-Submission Metadata",
  "description": "Structured metadata for FDA Pre-Submission meeting requests generated by /fda:presub command",
  "type": "object",
  "required": [
    "version",
    "meeting_type",
    "questions_generated",
    "question_count",
    "fda_form"
  ],
  "properties": {
    "version": {
      "type": "string",
      "description": "Schema version for compatibility validation",
      "enum": ["1.0"],
      "default": "1.0"
    },
    "generated_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when metadata was generated"
    },
    "meeting_type": {
      "type": "string",
      "description": "Type of Pre-Submission meeting requested",
      "enum": [
        "formal",
        "written",
        "info",
        "pre-ide",
        "administrative",
        "info-only"
      ]
    },
    "detection_method": {
      "type": "string",
      "description": "How the meeting type was determined",
      "enum": ["auto", "user-specified", "override"],
      "default": "auto"
    },
    "detection_rationale": {
      "type": "string",
      "description": "Explanation for why this meeting type was selected"
    },
    "product_code": {
      "type": "string",
      "description": "FDA product code for the device (e.g., DQY, OVE)",
      "pattern": "^[A-Z]{3}$"
    },
    "device_description": {
      "type": "string",
      "description": "Brief description of the device"
    },
    "intended_use": {
      "type": "string",
      "description": "Intended use statement / indications for use"
    },
    "questions_generated": {
      "type": "array",
      "description": "List of question IDs selected for this Pre-Sub",
      "items": {
        "type": "string",
        "pattern": "^[A-Z]+-[A-Z0-9]+-[0-9]{3}$",
        "description": "Question ID (e.g., PRED-001, TEST-BIO-001)"
      },
      "minItems": 0,
      "maxItems": 7
    },
    "question_count": {
      "type": "integer",
      "description": "Number of questions generated",
      "minimum": 0,
      "maximum": 7
    },
    "template_used": {
      "type": "string",
      "description": "Template file used for presub_plan.md",
      "enum": [
        "formal_meeting.md",
        "written_response.md",
        "info_meeting.md",
        "pre_ide.md",
        "administrative_meeting.md",
        "info_only.md"
      ]
    },
    "fda_form": {
      "type": "string",
      "description": "FDA form number for PreSTAR XML",
      "enum": ["FDA-5064"],
      "default": "FDA-5064"
    },
    "expected_timeline_days": {
      "type": "integer",
      "description": "Expected FDA response timeline in days",
      "minimum": 0,
      "default": 75
    },
    "auto_triggers_fired": {
      "type": "array",
      "description": "List of auto-triggers that matched device characteristics",
      "items": {
        "type": "string",
        "enum": [
          "patient_contacting",
          "sterile_device",
          "powered_device",
          "software_device",
          "implant_device",
          "reusable_device",
          "novel_technology"
        ]
      },
      "uniqueItems": true
    },
    "data_sources_used": {
      "type": "array",
      "description": "Data sources queried for template population",
      "items": {
        "type": "string"
      },
      "default": ["classification", "review.json", "guidance_cache"]
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata about the generation process",
      "properties": {
        "placeholder_count": {
          "type": "integer",
          "description": "Number of TODO placeholders in generated presub_plan.md",
          "minimum": 0
        },
        "auto_filled_fields": {
          "type": "array",
          "description": "List of fields successfully auto-populated from project data",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "additionalProperties": false
}
