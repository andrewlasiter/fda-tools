# FDA Tools Environment Configuration
# Copy this file to .env and fill in your actual credentials
# DO NOT COMMIT .env - it contains sensitive credentials

# ============================================================================
# API Keys
# ============================================================================

# Google Gemini API Key (for AI-powered features)
# Get your key at: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# OpenFDA API Key (optional, but recommended for higher rate limits)
# Get your key at: https://open.fda.gov/apis/authentication/
FDA_API_KEY=your_openfda_api_key_here

# Linear API Configuration (for issue tracking)
LINEAR_API_KEY=your_linear_api_key_here

# FDA Bridge Server API Key (optional)
# FDA_BRIDGE_API_KEY=your_bridge_api_key_here

# ============================================================================
# Application Configuration
# ============================================================================

# FDA Tools version
FDA_VERSION=5.36.0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# FDA Bridge Server Configuration (optional)
# FDA_BRIDGE_URL=http://localhost:18790
# FDA_BRIDGE_RATE_LIMIT=60
# FDA_BRIDGE_RATE_LIMIT_EXECUTE=30

# ============================================================================
# Docker Configuration
# ============================================================================

# Resource limits
FDA_CPU_LIMIT=2.0
FDA_MEMORY_LIMIT=4G
FDA_CPU_RESERVATION=0.5
FDA_MEMORY_RESERVATION=1G

# Network configuration
FDA_PORT=8080
FDA_NETWORK_SUBNET=172.25.0.0/16

# Local project directory (for development)
FDA_PROJECTS_DIR=./projects

# ============================================================================
# PostgreSQL Database (Optional)
# ============================================================================

# Database connection
# DATABASE_URL=postgresql://fdatools:changeme@postgres:5432/fda_tools

# Database configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=fda_tools
POSTGRES_USER=fdatools
POSTGRES_PASSWORD=changeme

# External port mapping (set to different port if 5432 is in use)
POSTGRES_EXTERNAL_PORT=5432

# ============================================================================
# Redis Cache (Optional)
# ============================================================================

# Redis connection
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379

# External port mapping (set to different port if 6379 is in use)
REDIS_EXTERNAL_PORT=6379

# ============================================================================
# Monitoring (Optional - use with --profile monitoring)
# ============================================================================

# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin
