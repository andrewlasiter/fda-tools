# Bandit security scanning configuration for FDA Tools
# https://bandit.readthedocs.io/en/latest/config.html

[bandit]
# Paths to exclude from scanning
exclude_dirs = [
    '/tests',
    '/.venv',
    '/venv',
    '/env',
    '/build',
    '/dist',
    '/.eggs',
    '/.pytest_cache',
    '/.tox',
    '/htmlcov',
    '/node_modules',
    '/openclaw-skill',
]

# Test IDs to skip
skips = [
    # B404: Consider possible security implications associated with subprocess module
    # (We need subprocess for git operations, external commands)
    'B404',
    # B603: subprocess call - check for execution of untrusted input
    # (We sanitize inputs before subprocess calls)
    'B603',
    # B607: Starting a process with a partial executable path
    # (We use standard system commands like git, python)
    'B607',
]

# Confidence levels to report
# LOW: Code that is unlikely to be a security issue
# MEDIUM: Code that may be a security issue
# HIGH: Code that is likely a security issue
# Report medium and high confidence issues
# low_confidence = False
# medium_confidence = True
# high_confidence = True

# Severity levels to report
# LOW: Minor security issue
# MEDIUM: Moderate security issue
# HIGH: Severe security issue
# Report medium and high severity issues
# low_severity = False
# medium_severity = True
# high_severity = True

[bandit.tests]
# B201: flask_debug_true
# B301-B308: Pickle, marshal, shelve (deserialization)
# B311: random (use secrets for cryptographic randomness)
# B403: import_subprocess
# B501-B509: Weak cryptography (MD5, SHA1, DES, RC4, Blowfish)
# B601-B612: Shell injection, SQL injection, etc.

