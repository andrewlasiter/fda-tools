# Flake8 configuration for FDA Tools
# Note: Ruff is the primary linter, but flake8 config is kept for compatibility

[flake8]
max-line-length = 100
max-complexity = 15
extend-ignore =
    # E203: whitespace before ':' (conflicts with black)
    E203,
    # E501: line too long (handled by black)
    E501,
    # W503: line break before binary operator (conflicts with black)
    W503,
    # D100: Missing docstring in public module
    D100,
    # D104: Missing docstring in public package
    D104,
    # D203: 1 blank line required before class docstring (conflicts with D211)
    D203,
    # D213: Multi-line docstring summary should start at the second line (conflicts with D212)
    D213,

per-file-ignores =
    # Tests don't need docstrings
    tests/*:D100,D101,D102,D103,F401,F841
    # Init files can have unused imports
    __init__.py:F401,F403
    # Scripts can be less strict
    scripts/*:D100,D103,D205,D400
    # OpenClaw skill is external
    openclaw-skill/*:E,W,F,D

exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    ENV,
    build,
    dist,
    *.egg-info,
    .eggs,
    .pytest_cache,
    .tox,
    htmlcov,
    node_modules,
    openclaw-skill,

# Import checking
import-order-style = google
application-import-names = lib,scripts,tests,bridge

# Docstring style
docstring-convention = google

# McCabe complexity
max-complexity = 15

# Count errors
count = True
statistics = True
